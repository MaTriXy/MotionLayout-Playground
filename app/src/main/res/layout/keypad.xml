<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialer_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/dial_one"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/dial_two"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:paddingTop="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/dial_three"
            android:theme="@style/Theme.AppCompat.Light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialer_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_four"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_five"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_six"
            android:theme="@style/Theme.AppCompat.Light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialer_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_seven"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_eight"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_nine"
            android:theme="@style/Theme.AppCompat.Light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialer_asterisk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_star"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_zero"
            android:theme="@style/Theme.AppCompat.Light" />

        <ImageView
            android:id="@+id/dialer_hash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/dial_hash"
            android:theme="@style/Theme.AppCompat.Light" />
    </LinearLayout>
</LinearLayout>