<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/right"
        motion:constraintSetStart="@+id/center"
        motion:duration="1000">

        <!--<KeyFrameSet>-->
            <!--<KeyAttribute-->
                <!--android:scaleX="2"-->
                <!--android:scaleY="2"-->
                <!--android:rotation="-45"-->
                <!--android:elevation="5dp"-->
                <!--motion:framePosition="50"-->
                <!--motion:target="@id/button" />-->
            <!--<KeyPosition-->
                <!--motion:keyPositionType="deltaRelative"-->
                <!--motion:percentY="2"-->
                <!--motion:framePosition="50"-->
                <!--motion:target="@id/button"/>-->
        <!--</KeyFrameSet>-->

    </Transition>


    <Transition
        motion:constraintSetEnd="@+id/up"
        motion:constraintSetStart="@+id/center"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/button"
            motion:touchAnchorSide="top" />

    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/left"
        motion:constraintSetStart="@+id/center"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorId="@id/button"
            motion:touchAnchorSide="left" />

    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/down"
        motion:constraintSetStart="@+id/center"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/button"
            motion:touchAnchorSide="bottom" />

    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/up"
        motion:constraintSetStart="@+id/center"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/button"
            motion:touchAnchorSide="top" />

    </Transition>


    <ConstraintSet android:id="@+id/center">
        <Constraint
            android:id="@id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@android:color/white" />
            <!--<CustomAttribute-->
                <!--motion:attributeName="crossfade"-->
                <!--motion:customFloatValue="0" />-->
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/right">
        <Constraint
            android:id="@id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <!--android:rotation="90"-->
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/colorPrimary" />
            <!--<CustomAttribute-->
                <!--motion:attributeName="crossfade"-->
                <!--motion:customFloatValue="1" />-->
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/left">
        <Constraint
            android:id="@id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:rotation="-90"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@android:color/holo_blue_light" />
            <!--<CustomAttribute-->
                <!--motion:attributeName="crossfade"-->
                <!--motion:customFloatValue="1" />-->
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/up">
        <Constraint
            android:id="@id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="8dp"
            android:rotation="180"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.0">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@android:color/holo_purple" />
            <!--<CustomAttribute-->
                <!--motion:attributeName="crossfade"-->
                <!--motion:customFloatValue="1" />-->
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/down">
        <Constraint
            android:id="@id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:rotation="-180"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@android:color/holo_green_light" />
            <!--<CustomAttribute-->
                <!--motion:attributeName="crossfade"-->
                <!--motion:customFloatValue="1" />-->
        </Constraint>
    </ConstraintSet>

</MotionScene>